@page "/register"
@using MeetingRoomBooker.Services
@using MeetingRoomBooker.Models
@inject IBookingService BookingService
@inject NavigationManager Navigation

<div class="register-container">
    <div class="cyber-card register-card">
        <h2 class="gradient-text text-center mb-4">NEW USER REGISTRATION</h2>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <FluentMessageBar Intent="MessageIntent.Error" Class="mb-3">
                @errorMessage
            </FluentMessageBar>
        }

        <FluentStack Orientation="Orientation.Vertical" VerticalGap="20">
            <div>
                <label class="input-label">User Name</label>
                <FluentTextField @bind-Value="name" Placeholder="Your Name" Style="width: 100%;" />
            </div>

            <div>
                <label class="input-label">Email ID</label>
                <FluentTextField @bind-Value="email" Placeholder="email@example.com" Style="width: 100%;" />
            </div>

            <div>
                <label class="input-label">Password</label>
                <FluentTextField @bind-Value="password" TextFieldType="TextFieldType.Password" Placeholder="password" Style="width: 100%;" />
            </div>

            <button class="cyber-button-primary w-100 mt-3" @onclick="HandleRegister">
                REGISTER
            </button>

            <div class="text-center mt-2">
                <a href="login" style="color: #58a6ff; font-size: 0.9rem; text-decoration: none;">&lt; Back to Login</a>
            </div>
        </FluentStack>
    </div>
</div>

@code {
    private string name = "";
    private string email = "";
    private string password = "";
    private string errorMessage = "";

    private async Task HandleRegister()
    {
        errorMessage = "";
        if (string.IsNullOrWhiteSpace(name) || string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "全ての項目を入力してください。";
            return;
        }

        try
        {
            var newUser = new UserModel
            {
                Name = name,
                Email = email,
                Password = password,
                AvatarColor = GetRandomColor()
            };

            await BookingService.RegisterUserAsync(newUser);
            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private string GetRandomColor()
    {
        var colors = new[] { "#58a6ff", "#3fb950", "#a371f7", "#d29922", "#f85149" };
        return colors[new Random().Next(colors.Length)];
    }
}

