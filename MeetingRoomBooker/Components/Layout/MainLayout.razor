@inherits LayoutComponentBase
@using Microsoft.FluentUI.AspNetCore.Components

<FluentDesignTheme />
<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
<FluentMenuProvider />

<FluentLayout>
    <FluentHeader>
        <h3 class="gradient-text" style="margin: 0; padding: 10px 0;">MeetingRoomBooker</h3>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        Copyright © 2025 Haru
    </FluentFooter>
</FluentLayout>

<style>
    .body-content {
        padding: 20px;
        width: 100%;
    }
</style>