@page "/login"
@using MeetingRoomBooker.Services
@using MeetingRoomBooker.Shared.Models
@inject IBookingService BookingService
@inject NavigationManager Navigation

<div class="login-container">
    <div class="cyber-card login-card">
        <h2 class="gradient-text text-center mb-4">SYSTEM LOGIN</h2>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <FluentMessageBar Intent="MessageIntent.Error" Class="mb-3">
                @errorMessage
            </FluentMessageBar>
        }

        <FluentStack Orientation="Orientation.Vertical" VerticalGap="20">
            <div>
                <label class="input-label">Email ID</label>
                <FluentTextField @bind-Value="email" Placeholder="haru@demo.com" Style="width: 100%;" />
            </div>

            <div>
                <label class="input-label">Password</label>
                <FluentTextField @bind-Value="password" TextFieldType="TextFieldType.Password" Placeholder="password" Style="width: 100%;" />
            </div>

            <button class="cyber-button-primary w-100 mt-3" @onclick="HandleLogin">
                CONNECT
            </button>

            <div class="text-center mt-2">
                <span style="color: #8b949e; font-size: 0.8rem;">Demo Account: haru@demo.com / password</span>
            </div>
        </FluentStack>
    </div>
</div>

@code {
    private string email = "";
    private string password = "";
    private string errorMessage = "";

    private async Task HandleLogin()
    {
        errorMessage = "";
        var user = await BookingService.LoginAsync(email, password);

        if (user != null)
        {
            Navigation.NavigateTo("/");
        }
        else
        {
            errorMessage = "Invalid credentials. Access Denied.";
        }
    }
}

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
        padding: 40px;
        background: rgba(22, 27, 34, 0.95) !important;
    }

    .input-label {
        display: block;
        color: #8b949e;
        margin-bottom: 5px;
        font-size: 0.9rem;
    }

    .w-100 {
        width: 100%;
    }

    .text-center {
        text-align: center;
    }

    .mt-3 {
        margin-top: 1rem;
    }

    .mt-2 {
        margin-top: 0.5rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }
</style>