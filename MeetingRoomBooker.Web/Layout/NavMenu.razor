@using MeetingRoomBooker.Services
@using MeetingRoomBooker.Shared.Models
@inject IBookingService BookingService
@inject NavigationManager Navigation
@implements IDisposable

<div class="@(IsMobile ? "mobile-nav-container" : "desktop-nav-container")">
    <nav class="@(IsMobile ? "mobile-nav" : "flex-column desktop-nav")">
        <NavLink class="@NavLinkClass" href="" Match="NavLinkMatch.All">
            <span class="oi oi-home icon"></span><span class="label">ホーム</span>
        </NavLink>

        @if (currentUser != null)
        {
            <NavLink class="@NavLinkClass" href="reservation">
                <span class="oi oi-plus icon"></span><span class="label">予約</span>
            </NavLink>
            <NavLink class="@NavLinkClass" href="schedule">
                <span class="oi oi-calendar icon"></span><span class="label">カレンダー</span>
            </NavLink>

            <div style="position: relative; width: 100%; display: flex; justify-content: center;" class="@(IsMobile ? "mobile-nav-item" : "")">
                <NavLink class="@NavLinkClass" href="notifications">
                    <span class="oi oi-bell icon"></span>
                    <span class="label" style="display: inline-flex; align-items: center; gap: 6px;">
                        通知
                        @if (unreadCount > 0)
                        {
                            <span class="inline-badge">@unreadCount</span>
                        }
                    </span>
                </NavLink>
            </div>

            @if (currentUser?.IsAdmin == true)
            {
                <NavLink class="@NavLinkClass" href="users">
                    <span class="oi oi-people icon"></span><span class="label">管理</span>
                </NavLink>
            }

            <NavLink class="@NavLinkClass" href="settings">
                <span class="oi oi-cog icon"></span><span class="label">設定</span>
            </NavLink>

            @if (!IsMobile)
            {
                <div class="nav-separator"></div>
            }

            <div class="@(IsMobile ? "mobile-nav-item profile-tab" : "user-profile-item px-3")" @onclick="() => showMobileProfile = !showMobileProfile">
                @if (IsMobile)
                {
                    <span class="oi oi-person icon @(showMobileProfile ? "active-profile" : "")"></span>
                    <span class="label">マイページ</span>
                }
                else
                {
                    <div class="user-profile-content">
                        <div class="user-avatar" style="background-color: @currentUser.AvatarColor">
                            @currentUser.Name.Substring(0, 1).ToUpper()<span class="status-dot"></span>
                        </div>
                        <span class="user-name">@currentUser.Name</span>
                    </div>
                    <div class="logout-link" @onclick="Logout"><span>(Logout)</span></div>
                }
            </div>
        }
        else
        {
            <NavLink class="@NavLinkClass" href="settings">
                <span class="oi oi-cog icon"></span><span class="label">設定</span>
            </NavLink>
            <NavLink class="@NavLinkClass" href="login">
                <span class="oi oi-account-login icon"></span><span class="label">ログイン</span>
            </NavLink>
        }
    </nav>
</div>

@if (IsMobile && showMobileProfile && currentUser != null)
{
    <div class="mobile-profile-menu cyber-card">
        <div class="user-profile-content mb-3">
            <div class="user-avatar" style="background-color: @currentUser.AvatarColor">
                @currentUser.Name.Substring(0, 1).ToUpper()<span class="status-dot"></span>
            </div>
            <span class="user-name">@currentUser.Name</span>
        </div>
        <button class="cyber-button-primary w-100" style="background: #da3633;" @onclick="Logout">ログアウト</button>
        <button class="close-btn-mobile" @onclick="() => showMobileProfile = false">×</button>
    </div>
    <div class="mobile-menu-backdrop" @onclick="() => showMobileProfile = false"></div>
}

@code {
    [Parameter] public bool IsMobile { get; set; } = false;
    private UserModel? currentUser;
    private int unreadCount = 0;
    private bool showMobileProfile = false;
    private string NavLinkClass => IsMobile ? "mobile-nav-link" : "nav-link desktop-nav-link";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        BookingService.OnChange += StateHasChangedWrapper;
    }

    private async void StateHasChangedWrapper()
    {
        await LoadData();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadData()
    {
        currentUser = BookingService.GetCurrentUser();
        if (currentUser != null)
        {
            try
            {
                var notes = await BookingService.GetNotificationsAsync(currentUser.Id);
                unreadCount = notes.Count(n => !n.IsRead);
            }
            catch { }
        }
    }

    public void Dispose() { BookingService.OnChange -= StateHasChangedWrapper; }
    private void Logout() { BookingService.Logout(); Navigation.NavigateTo("/", forceLoad: false); }
}

